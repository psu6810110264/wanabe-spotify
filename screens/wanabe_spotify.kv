<LoginScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 40
        spacing: 20

        Label:
            text: "Wanabe Spotify"
            font_size: 32

        Label:
            text: "Login to your account"

        TextInput:
            id: username
            hint_text: "Username"
            multiline: False

        TextInput:
            id: password
            hint_text: "Password"
            password: True
            multiline: False

        Button:
            text: "Login"
            on_press: root.on_login()

        Button:
            text: "Clear"
            on_press: root.clear_fields()